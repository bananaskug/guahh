(function(api, args) { // This is the main function for the game. // 'api' lets us print to the screen. // 'args' contains the user's guess from the command line. api.print("--- G-DOS Number Guesser ---"); const userGuess = parseInt(args[0]); // Check if the user provided a valid number as a guess. if (isNaN(userGuess)) { api.print("I will think of a number between 1 and 100."); api.print(""); api.print("To play, you must provide a guess."); api.print("Usage: EXEC NUMGUESS.EXEC "); api.print("Example: EXEC NUMGUESS.EXEC 50"); return; // End the game } // --- Game Logic --- const min = 1; const max = 100; const secretNumber = Math.floor(Math.random() * (max - min + 1)) + min; api.print(""); api.print(`You guessed the number: ${userGuess}`); api.print(`I was thinking of the number: ${secretNumber}`); api.print("--------------------------"); // Check if the user won if (userGuess === secretNumber) { api.print("Wow, you guessed it exactly right! You win!"); } else { const difference = Math.abs(secretNumber - userGuess); if (difference <= 5) { api.print("So close! You were off by 5 or less."); } else { api.print("Sorry, that wasn't it. Better luck next time!"); } } api.print(""); })
